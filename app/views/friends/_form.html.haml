= form_with(model: friend) do |form|
  - if friend.errors.any?
    #error_explanation
      %h2
        = pluralize(friend.errors.count, "error")
        prohibited this friend from being saved:
      %ul
        - friend.errors.each do |error|
          %li= error.full_message
  .field.form-group
    = form.text_field :first_name, class:"form-control", placeholder:"Nombre"
  .field.form-group
    = form.text_field :last_name, class:"form-control", placeholder:"Apellido"
  .field.form-group
    = form.text_field :email, class:"form-control", placeholder:"Correo"
  .field.form-group
    = form.text_field :phone, class:"form-control", placeholder:"Tel√©fono"
  .field.form-group
    = form.text_field :twitter, class:"form-control", placeholder:"Twitter"
  %br/
  .actions
    = form.submit 'Agregar Amigo', class:"btn btn-secondary"
  %br/