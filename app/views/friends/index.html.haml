%h1 Lista de Amigos
%table.table.table-striped.table-bordered.table-hover
  %thead.thead-dark
    %tr
      %th Nombre
      %th Apellido
      %th Email
      %th Teléfono
      %th Twitter
      %th{:colspan => "3"}
  %tbody
    - @friends.each do |friend|
      %tr
        %td= friend.first_name
        %td= friend.last_name
        %td= friend.email
        %td= friend.phone
        %td= friend.twitter
        %td= link_to 'Mostrar', friend
        %td= link_to 'Editar', edit_friend_path(friend)
        %td= link_to 'Eliminar', friend, method: :delete, data: { confirm: 'Estás seguro?' }
%br/
= link_to 'Agregar Amigo', new_friend_path, class:"btn btn-secondary"